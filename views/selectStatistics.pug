extends template
block content
    .grid-container
        h1 Choose Month and Year for Statistics
        form(action="/selectStatistics", method="post")
            br
            label(for="month") Month:
            br
            input(type="number", name="month", id="month" min="1" max="12" required)
            br
            label(for="year") Year:
            br
            input(type="number", name="year", id="year" min="2000" max="2099" required)
            br
            button(type="submit") Get Statistics
            