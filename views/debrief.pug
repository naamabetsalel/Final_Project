extends template 
block content
    .form-box
        .debrief-container#surgury
          div.top
    header New Surgery
    form(action="/debrief" method="get")
        div.input-box
            input.input-field(type="date" placeholder="Date Of Surgery" name="date" required)
            i.bx.bxs-time
        div.input-box
            select.input-field(name="SurgeryType" required)
                option(value="Coronary Artery Bypass Grafting (CABG)") Coronary Artery Bypass Grafting (CABG)
                option(value="Valve Replacement Surgery") Valve Replacement Surgery
                option(value="Atrial Septal Defect (ASD) Closure") Atrial Septal Defect (ASD) Closure
                option(value="Ventricular Septal Defect (VSD) Repair") Ventricular Septal Defect (VSD) Repair
                option(value="Heart Transplantation") Heart Transplantation
        div.input-box
            input.input-field(type="time" placeholder="Surgery Duration" name="duration" required)
            i.bx.bxs-time
        div.input-box
            input.input-field(type="number" placeholder="BMI" name="BMI" min="12" max="42" required)
            i.bx.bxs-heart
        div.input-box
            input.input-field(type="number" placeholder="Age" name="age" min="18" max="120" required)
            i.bx.bxs-heart
        div.input-box
            select.input-field(name="pastProblems" required)
                option(value="Yes") Yes
                option(value="No") No
        div.input-box
            select.input-field(name="reoperation" required)
                option(value="Yes") Yes
                option(value="No") No
        div.input-box
            input.input-field(type="number" placeholder="Complication" name="complication" required)
            i.bx.bxs-heart
        div.input-box
            select.input-field(name="Satisfaction" required)
                option(value="1") 1
                option(value="2") 2
                option(value="3") 3
                option(value="4") 4
                option(value="5") 5
        div.input-box
            input.input-field(type="text" placeholder="Debrief Point" name="point" required)
            i.bx.bxs-wrench
        div.input-box
            input.submit(type="submit" value="Save")
